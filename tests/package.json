{
  "name": "@todo.mdx/tests",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "vitest run unit/",
    "test:e2e": "vitest run e2e/",
    "test:all": "vitest run",
    "test:watch": "vitest",
    "test:mcp": "vitest run e2e/mcp-server.test.ts",
    "test:browser": "playwright test",
    "test:browser:ui": "playwright test --ui",
    "test:browser:headed": "playwright test --headed",
    "test:browser:debug": "playwright test --debug",
    "test:browser:auth": "CHROME_PROFILE_DIR='Profile 6' playwright test --project=chrome-profile",
    "test:browser:cdp": "CHROME_DEBUG_PORT=9222 playwright test browser/cdp-auth-test.spec.ts --project=chromium",
    "test:mcp:oauth": "playwright test browser/mcp-e2e.spec.ts --project=chromium --headed",
    "mcp:inspect": "npx @modelcontextprotocol/inspector",
    "mcp:inspect-remote": "npx @modelcontextprotocol/inspector --cli https://todo.mdx.do/mcp/sse --transport sse",
    "chrome:debug": "./scripts/start-chrome-debug.sh 'Profile 6'",
    "setup:test-profile": "./scripts/setup-test-profile.sh"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.14.0",
    "@octokit/app": "^14.0.0",
    "@octokit/core": "^7.0.6",
    "@playwright/test": "^1.49.0",
    "dotenv": "16.4.7",
    "execa": "^9.0.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "oauth.do": "^0.1.15"
  }
}
