{
  "name": "todo.mdx",
  "version": "0.2.0",
  "description": "Bi-directional sync between TODO.mdx, .todo/*.md files, and beads",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "todo.mdx": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./worker": {
      "types": "./worker/index.ts",
      "import": "./worker/index.ts"
    }
  },
  "files": [
    "dist",
    "worker"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "tsup",
    "prepublishOnly": "pnpm test && pnpm typecheck",
    "worker:dev": "wrangler dev --config worker/wrangler.jsonc",
    "worker:deploy": "wrangler deploy --config worker/wrangler.jsonc"
  },
  "keywords": [
    "todo",
    "mdx",
    "markdown",
    "beads",
    "sync",
    "issue-tracker"
  ],
  "author": "dot-do",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dot-do/todo.mdx.git"
  },
  "dependencies": {
    "@mdxld/extract": "^1.9.1",
    "@mdxld/markdown": "^1.9.0",
    "@octokit/rest": "^21.0.0",
    "beads-workflows": "^0.1.1",
    "chokidar": "^4.0.0",
    "db.td": "*",
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@cloudflare/workers-types": "^4.0.0",
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0",
    "wrangler": "^4.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
