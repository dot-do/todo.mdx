{
  "name": "todo.mdx-monorepo",
  "private": true,
  "packageManager": "pnpm@9.15.1",
  "workspaces": [
    "packages/*",
    "apps/*",
    "worker",
    "tests"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:e2e": "pnpm --filter @todo.mdx/tests test:e2e",
    "lint": "turbo run lint",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "changeset:status": "changeset status"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "turbo": "^2.3.3",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "@cloudflare/workers-oauth-provider": "patches/@cloudflare__workers-oauth-provider.patch"
    }
  },
  "dependencies": {
    "@types/react": "^19.2.7",
    "ink": "^6.5.1",
    "ink-testing-library": "^4.0.0",
    "react": "^19.2.3"
  }
}
