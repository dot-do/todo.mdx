{
  "name": "@todo.mdx/readme.mdx",
  "version": "0.1.0",
  "description": "MDX components that compile to README.md with live data from package.json, GitHub, and npm",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "readme.mdx": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./docs": {
      "types": "./dist/docs.d.ts",
      "import": "./dist/docs.js"
    }
  },
  "files": [
    "dist",
    "docs"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest --passWithNoTests"
  },
  "keywords": [
    "readme",
    "mdx",
    "markdown",
    "documentation",
    "github",
    "npm",
    "badges",
    "package.json"
  ],
  "author": "dot-do",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dot-do/todo.mdx.git",
    "directory": "packages/readme.mdx"
  },
  "dependencies": {
    "@todo.mdx/core": "workspace:^",
    "mdxld": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
