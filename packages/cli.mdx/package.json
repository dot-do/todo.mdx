{
  "name": "@todo.mdx/cli.mdx",
  "version": "0.1.0",
  "description": "MDX-based CLI framework for Bun with dual rendering to terminal and markdown",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cli.mdx": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components.d.ts",
      "import": "./dist/components.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest --passWithNoTests"
  },
  "keywords": [
    "cli",
    "mdx",
    "markdown",
    "terminal",
    "react",
    "bun",
    "framework"
  ],
  "author": "dot-do",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dot-do/todo.mdx.git",
    "directory": "packages/cli.mdx"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.1.0",
    "@todo.mdx/core": "workspace:^",
    "@todo.mdx/shared": "workspace:*",
    "beads-workflows": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "react": "^18.3.1",
    "react-reconciler": "^0.29.2",
    "strip-ansi": "^7.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-reconciler": "^0.28.8",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
