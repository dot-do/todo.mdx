{
  "name": "@todo.mdx/core",
  "version": "0.1.0",
  "description": "Bidirectional sync between TODO.mdx templates, .todo/*.md files, GitHub Issues, and beads",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "todo.mdx": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./docs": {
      "types": "./dist/docs.d.ts",
      "import": "./dist/docs.js"
    }
  },
  "files": [
    "dist",
    "docs"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "keywords": [
    "todo",
    "mdx",
    "github",
    "issues",
    "beads",
    "sync",
    "markdown"
  ],
  "author": "dot-do",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dot-do/todo.mdx.git",
    "directory": "packages/todo.mdx"
  },
  "dependencies": {
    "@todo.mdx/shared": "workspace:*",
    "beads-workflows": "^0.1.1",
    "chokidar": "^4.0.0",
    "mdxld": "^1.0.0"
  },
  "devDependencies": {
    "@clack/prompts": "^0.11.0",
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
