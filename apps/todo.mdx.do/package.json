{
  "name": "@todo.mdx/site",
  "version": "0.1.0",
  "description": "todo.mdx documentation site - Fumadocs + OpenNext + WorkOS AuthKit",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:worker": "npx @opennextjs/cloudflare build --skipNextBuild",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "deploy": "pnpm build && pnpm build:worker && wrangler deploy",
    "preview": "wrangler dev",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@opennextjs/cloudflare": "^1.14.0",
    "@todo.mdx/dashboard": "workspace:*",
    "@workos-inc/authkit-nextjs": "^2.12.0",
    "date-fns": "^4.1.0",
    "fumadocs-core": "^14.0.0",
    "fumadocs-mdx": "^10.0.0",
    "fumadocs-ui": "^14.0.0",
    "lucide-react": "^0.460.0",
    "next": "^15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250106.0",
    "@playwright/test": "^1.49.1",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.20",
    "fumadocs-docgen": "^1.3.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "wrangler": "^4.53.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
